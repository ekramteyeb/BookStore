package com.course.bookstore;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.boot.CommandLineRunner;
import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.annotation.Bean;

import com.course.bookstore.domain.Book;
import com.course.bookstore.domain.BookRepository;


@SpringBootApplication
public class BookStoreApplication {

	private static final Logger log = LoggerFactory.getLogger(BookStoreApplication.class);
	
	public static void main(String[] args) {
		SpringApplication.run(BookStoreApplication.class, args);
	}
		
	@Bean
	public CommandLineRunner Demo(BookRepository brepository) {
		return (args) -> {
			log.info("save a couple of books");
			
			brepository.save(new Book("Yechamut Sheka", "Hayleyesus", "1989", "123211",56 ));
			brepository.save(new Book("Yeburka zemeta", "Gebre", "2012", "EC89",78 ));
			
			
			log.info("fetch all books");
			for (Book book : brepository.findAll()) {
				log.info(book.toString());
			}

		};
}
}